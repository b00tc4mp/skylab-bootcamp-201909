extends ../view/index
  
block body
    section.view.detail
        h2.detail__title= item.title
        img.detail__image(src= item.image)
        p.detail__description= item.description
        a.detail__store(href= item.link) Go store
        span.detail__price= item.price
        span.detail_fav
            form(method="POST" action=favPath)
                input(type="hidden" name="id" value=item.id)
                button(type="submit")= item.isFav ? '👍🏼' : '👎🏼'
        a.detail__back(href= backPath) Go back

