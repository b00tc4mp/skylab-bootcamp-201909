mixin result-item(duck)
        a.item-list__link(href='/ducks/' + duck.id)
            h2.item-list__title= duck.title 
            img.item-list__image(src=duck.image)
            p.item-list__price= duck.price
            span
                form(method="post" action=favPath)
                    input(type="hidden" name="id" value=duck.id)
                    button.item-list__buttonfav(type="submit")
                        img.item-list__fav(src=(duck.isFav? "https://image.flaticon.com/icons/svg/1469/1469575.svg" : "https://image.flaticon.com/icons/svg/1469/1469600.svg"))