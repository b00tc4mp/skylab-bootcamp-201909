extends ../view/index 

include ../feedback/index 

block body 
    section.view.register
        div.register__div
            form.register__form(method="post" action=path)
                input.register__input(type="text" name="name" placeholder="name" autofocus="" required="")
                input.register__input(type="text" name="surname" placeholder="surname" required="")
                input.register__input(type="email" name="email" placeholder="email" required="")
                input.register__input(type="password" name="password" placeholder="password" required="")
                button.register__button  Register
                if error
                    +feedback(error)


